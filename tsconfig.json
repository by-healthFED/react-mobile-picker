{
  "compilerOptions": {
    "outDir": "dist/mjs",
    "target": "es5",
    "moduleResolution": "node",
    "module": "es2015",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "jsx": "react",
    "jsxFactory": "React.createElement",

    "lib": ["es2015", "dom"],
    "types": [],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules/**"]
}
